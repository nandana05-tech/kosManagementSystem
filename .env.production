# =====================================================
# KOST MANAGEMENT SYSTEM - PRODUCTION ENVIRONMENT
# Domain: kos-wisnu.my.id
# =====================================================

# General
NODE_ENV=production

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=GANTI_DENGAN_PASSWORD_KUAT
POSTGRES_DB=kos_management

# JWT Configuration
# Generate dengan: openssl rand -hex 64
JWT_SECRET=GANTI_DENGAN_64_KARAKTER_RANDOM
JWT_EXPIRES_IN=7d

# Midtrans Payment Gateway
# Dapatkan dari: https://dashboard.midtrans.com
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false

# Email Configuration (SMTP)
# Untuk Gmail: gunakan App Password, bukan password biasa
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@kos-wisnu.my.id

# ==============================================
# PRODUCTION URLs - Domain kos-wisnu.my.id
# ==============================================
# Gunakan HTTPS setelah SSL certificate aktif
FRONTEND_URL=https://kos-wisnu.my.id

# API URL menggunakan relative path (melalui nginx proxy)
VITE_API_URL=/api
